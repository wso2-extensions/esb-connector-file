<?xml version="1.0" encoding="UTF-8"?>
<template name="copy" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="source"/>
    <parameter name="destination"/>
    <parameter name="filePattern"/>
    <parameter name="setTimeout"/>
    <parameter name="setPassiveMode"/>
    <parameter name="setSoTimeout"/>
    <parameter name="setStrictHostKeyChecking"/>
    <parameter name="setUserDirIsRoot"/>
    <parameter name="includeParentDirectory"/>
    <parameter name="includeSubdirectories"/>
    <sequence>
        <property expression="$func:source" name="source" scope="default" type="STRING"/>
        <property expression="$func:destination" name="destination" scope="default" type="STRING"/>
        <property expression="$func:filePattern" name="filePattern" scope="default" type="STRING"/>
        <property expression="$func:setTimeout" name="setTimeout" scope="default" type="STRING"/>
        <property expression="$func:setPassiveMode" name="setPassiveMode" scope="default" type="STRING"/>
        <property expression="$func:setSoTimeout" name="setSoTimeout" scope="default" type="STRING"/>
        <property expression="$func:setStrictHostKeyChecking" name="setStrictHostKeyChecking" scope="default" type="STRING"/>
        <property expression="$func:setUserDirIsRoot" name="setUserDirIsRoot" scope="default" type="STRING"/>
        <property expression="$func:includeParentDirectory" name="includeParentDirectory" scope="default" type="STRING"/>
        <property expression="$func:includeSubdirectories" name="includeSubdirectories" scope="default" type="STRING"/>
        <class name="org.wso2.carbon.connector.FileCopy"/>
    </sequence>
</template>
