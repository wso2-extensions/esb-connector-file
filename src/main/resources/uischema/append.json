{
  "connectorName": "file",
  "operationName": "append",
  "title": "Append",
  "help": "<h1>Append</h1><b>The append operation appends content to an existing file in a specified location.</b><br><br><ul><li><a href=\"https://ei.docs.wso2.com/en/latest/micro-integrator/references/connectors/file-connector/file-connector-config/\"> More Help </a></li></ul>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "destination",
                    "displayName": "Destination",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The location of the file for which content needs to be appended."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "inputContent",
                    "displayName": "Input Content",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The content to be appended."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "position",
                    "displayName": "Position",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Position to append the content. If you provide a valid position, content will be appended to that position. Otherwise, content will be appended at the end of the file."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "encoding",
                    "displayName": "Encoding",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The encoding that is supported. Possible values are US-ASCII, UTF-8, and UTF-16."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setTimeout",
                    "displayName": "Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The timeout value on the JSC (Java Secure Channel) session in milliseconds. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setPassiveMode",
                    "displayName": "Passive Mode",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to enable passive mode."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setSoTimeout",
                    "displayName": "Socket Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The socket timeout value for the FTP client. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setUserDirIsRoot",
                    "displayName": "Is User Directory Root",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to use root as the user directory."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setStrictHostKeyChecking",
                    "displayName": "Strict Host Key Checking",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Sets the requirement to use host key checking. E.g., no."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "sftpIdentities",
                    "displayName": "Private Key's Location",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The location of the private key."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "sftpIdentityPassphrase",
                    "displayName": "Private Key's Passphrase",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The passphrase of the private key."
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
